# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_USER=realtydirect
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=realtydirect_prod

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_S3_BUCKET=realtydirect-prod
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# External APIs
DOCUSIGN_CLIENT_ID=your_docusign_client_id
DOCUSIGN_CLIENT_SECRET=your_docusign_client_secret
HELLOSIGN_API_KEY=your_hellosign_api_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Application URLs
FRONTEND_URL=https://yourdomain.com
API_URL=https://yourdomain.com/api

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# AI Services (Optional)
OPENAI_API_KEY=your_openai_api_key

# SSL Configuration (for Let's Encrypt)
SSL_EMAIL=admin@yourdomain.com
DOMAIN=yourdomain.com

